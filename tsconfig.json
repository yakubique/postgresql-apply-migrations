{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "action",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "postgresql-apply-migrations/src/**/*.spec.ts",
    "postgresql-apply-migrations/src/**/*.test.ts",
    "./__tests__",
    "./coverage"
  ]
}